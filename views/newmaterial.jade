              label.col-sm-6.control-label(for="form_f1") Lorentz Scattering Amplitude #1
              .col-sm-6
                input#form_f1.form-control(type="number", placeholder="1", name="f1", ng-model='currentMaterial.f1', min="0", required)     
            br
        
