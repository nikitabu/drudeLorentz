extends layout

block input

    .panel.panel-default
      .panel-heading
        h2 Select Material
      .panel-body
        .btn-group
          ul(class="list-inline")
            li(ng-repeat='material in materials')
              button(class="btn btn-primary", ng-class='currentClass(material.name)', ng-click="editCurrentMaterial(material);", type="submit")
                {{material.name}}
            li
              button(class="btn btn-warning", type="submit", ng-click="createNewMaterial()") New

block output

    .panel.panel-default
      .panel-heading
        h2 Edit 
      .panel-body
          form(name="materialForm", method="post", action="/addmaterial", class="form-horizontal", ng-submit="submitMaterial()", novalidate)

            div.form-group
              label.col-sm-6.control-label(for="form_name") Material Name
              .col-sm-6
                input#form_name.form-control(type="text", placeholder="Au", name="materialname", ng-model='currentMaterial.name', required)     
            br
                
            div.form-group
              label.col-sm-6.control-label(for="form_eps") Dielectric Constant
              .col-sm-6
                input#form_eps.form-control(type="number", placeholder="10", name="eps", ng-model='currentMaterial.eps', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_meff") Effective Mass
              .col-sm-6
                input#form_meff.form-control(type="number", placeholder="0.1", name="meff", ng-model='currentMaterial.meff', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_f0") Drude Scattering Amplitude 
              .col-sm-6
                input#form_f0.form-control(type="number", placeholder="1", name="f0", ng-model='currentMaterial.f0', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_g0") Drude Damping (eV)
              .col-sm-6
                input#form_g0.form-control(type="number", placeholder="1", name="g0", ng-model='currentMaterial.g0', required)     
            br
 
            div.form-group
              label.col-sm-6.control-label(for="form_w1") Lorentz Resonant Frequency #1 (eV)
              .col-sm-6
                input#form_w1.form-control(type="number", placeholder="1", name="w1", ng-model='currentMaterial.w1', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_g1") Lorentz Damping Rate #1 (eV)
              .col-sm-6
                input#form_g1.form-control(type="number", placeholder="1", name="g1", ng-model='currentMaterial.g1', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_f1") Lorentz Scattering Amplitude #1
              .col-sm-6
                input#form_f1.form-control(type="number", placeholder="1", name="f1", ng-model='currentMaterial.f1', required)     
            br
        
            div.form-group
              label.col-sm-6.control-label(for="form_w2") Lorentz Resonant Frequency #2 (eV)
              .col-sm-6
                input#form_w2.form-control(type="number", placeholder="2", name="w2", ng-model='currentMaterial.w2', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_g2") Lorentz Damping Rate #2 (eV)
              .col-sm-6
                input#form_g2.form-control(type="number", placeholder="2", name="g2", ng-model='currentMaterial.g2', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_f2") Lorentz Scattering Amplitude #2
              .col-sm-6
                input#form_f2.form-control(type="number", placeholder="2", name="f2", ng-model='currentMaterial.f2', required)     
            br  
            
            div.form-group
              label.col-sm-6.control-label(for="form_w3") Lorentz Resonant Frequency #3 (eV)
              .col-sm-6
                input#form_w3.form-control(type="number", placeholder="3", name="w3", ng-model='currentMaterial.w3', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_g3") Lorentz Damping Rate #3 (eV)
              .col-sm-6
                input#form_g3.form-control(type="number", placeholder="3", name="g3", ng-model='currentMaterial.g3', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_f3") Lorentz Scattering Amplitude #3
              .col-sm-6
                input#form_f3.form-control(type="number", placeholder="3", name="f3", ng-model='currentMaterial.f3', required)     
            br

            div.form-group
              label.col-sm-6.control-label(for="form_w4") Lorentz Resonant Frequency #4 (eV)
              .col-sm-6
                input#form_w4.form-control(type="number", placeholder="4", name="w4", ng-model='currentMaterial.w4', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_g4") Lorentz Damping Rate #4 (eV)
              .col-sm-6
                input#form_g4.form-control(type="number", placeholder="4", name="g4", ng-model='currentMaterial.g4', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_f4") Lorentz Scattering Amplitude #4
              .col-sm-6
                input#form_f4.form-control(type="number", placeholder="4", name="f4", ng-model='currentMaterial.f4', required)     
            br

            div.form-group
              label.col-sm-6.control-label(for="form_w5") Lorentz Resonant Frequency #5 (eV)
              .col-sm-6
                input#form_w5.form-control(type="number", placeholder="0", name="w5", ng-model='currentMaterial.w5', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_g5") Lorentz Damping Rate #5 (eV)
              .col-sm-6
                input#form_g5.form-control(type="number", placeholder="0", name="g5", ng-model='currentMaterial.g5', required)     
            div.form-group
              label.col-sm-6.control-label(for="form_f5") Lorentz Scattering Amplitude #5
              .col-sm-6
                input#form_f5.form-control(type="number", placeholder="0", name="f5", ng-model='currentMaterial.f5', required)     
            br

            div(ng-switch on="newMaterial")
                button.btn.btn-primary(type="submit", ng-disabled="materialForm.$invalid", ng-switch-when="false") Update  
                a.btn.btn-danger(type="submit", href="#", ng-click="deleteCurrentMaterial();", ng-switch-when="false") Delete  
                button.btn.btn-primary(type="submit", ng-disabled="materialForm.$invalid", ng-switch-when="true") Add         
                